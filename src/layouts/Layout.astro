---
interface Props {
  title: string;
}

const { title } = Astro.props;
const previewImage = "./preview-world-flags.webp";
import Header from "../components/Header.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Discover and learn flags from around the world with this interactive web application. Is the ultimate quiz game for students, travelers, and geography enthusiasts. Test your knowledge with hundreds of flags and improve your skills in a fun and challenging way."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:image" content={previewImage} />
    <title>{title}</title>
  </head>
  <body>
    <Header />
    <slot />
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@300;600;700&display=swap");
  html {
    font-family: "Poppins", sans-serif;
    font-weight: 300;
    background: #d9d9e6;
    overflow-x: hidden;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
</style>
