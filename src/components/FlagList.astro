---
import { flags } from "../constants/flags.js";
import FlagListItem from "./FlagListItem.astro";
---

<div class="container-list">
  {flags.map((flag) => <FlagListItem img={flag.image} name={flag.name} />)}
</div>

<style>
  .container-list {
    grid-template-columns: repeat(auto-fill, min(200px));
    display: grid;
    width: 80vw;
    margin: 0 auto;
    gap: 10px;
    align-items: center;
    
    justify-content: center;
    margin-bottom: 60px;
  }
  @media screen and (max-width: 600px){
    .container-list{
     display:grid;
     grid-template-columns: repeat(autofill, min(80px));
   
      width: 100vw;

  }
}

</style>
